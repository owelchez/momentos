<div class="error-messages">
  <% if(error_msg.length > 0) { %>
      <%  error_msg.forEach(error => { %>
         <div class="alert alert-danger flash-message container">
        <%= error.msg %>
        </div>
      <%  }) %>
  <% } %>

  <% if(error.length > 0) { %>
      <%  error.forEach(error => { %>
         <div class="alert alert-danger flash-message container">
        <%= error %>
        </div>
      <%  }) %>
  <% } %>
</div>

